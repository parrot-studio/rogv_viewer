<% dates = @result.gv_dates.sort %>
<div class="row">
  <div class="span7">
    <h2>Call Rankers (<%= dates.first %> - <%= dates.last %>)</h2>
  </div>
  <div class="span5">
    <%= partial :menu %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <hr/>
  </div>
</div>
<h3>TOP 10 Rankers</h3>
<div class="row">
  <div class="span12">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th class="span1">Rank</th>
          <th class="span3">Guild</th>
          <% dates.each do |d| %>
            <th class="span1"><%= devided_date(d) %></th>
          <% end %>
          <th class="span1">Total</th>
        </tr>
      </thead>
      <tbody>
        <% each_rankers_for_view(@result, 10) do |vrank, gname, count| %>
          <tr>
            <td><%= vrank %></td>
            <td><%= gname %></td>
            <% dates.each do |d| %>
              <td><%= g = @weeks[d].guild_map[gname]; g ? g.called_count : '-' %></td>
            <% end %>
            <td class="attention"><%= count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="span6">
    <hr/>
  </div>
</div>
<h3>All Rankers</h3>
<%= partial :call_rank %>
